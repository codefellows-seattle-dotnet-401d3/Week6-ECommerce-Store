<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment include="Development">
        <!-- Bootstrap Dependencies (jQuery & Popper) -->
        <script src="~/lib/js/jquery-3.3.1.slim.js"></script>
        <script src="~/lib/js/popper.js"></script>
        <!-- Bootstrap -->
        <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <!-- Bootstrap Dependencies (jQuery & Popper) -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    </environment>

    <!-- Material icons font CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    <!-- Site-specific styling -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    

    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" asp-controller="Account" asp-action="Logout">
            <a asp-controller="Account" asp-action="Profile"><i class="material-icons">person</i>@User.Identity.Name</a> <button type="submit">Logout</button> <!-- Will be an anchor tag when Bootstrap is integrated <a asp-controller="Account" asp-action="Logout">&#40logout&#41</a> -->
        </form>
    }
    else
    {
        <i class="material-icons">person_outline</i><p>Not logged in. <a asp-controller="Account" asp-action="Login">&#40login&#41</a></p>
    }
    <p><a asp-controller="Shop" asp-action="Index">Shopping</a></p>
    @if (User.IsInRole(ApplicationRoles.Admin))
    {
        <p><a asp-controller="Products" asp-action="Index">Product Administration Dashboard</a></p>
    }
    <hr />
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
